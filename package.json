{
  "name": "@rmzmiguel/migbutton",
  "version": "1.0.0",
  "description": "Un componente de botón React elegante y personalizable - Instalable desde GitHub",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:types && npm run build:js && npm run build:css",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "build:js": "rollup -c",
    "build:css": "cp src/FancyButton.css dist/",
    "clean": "rimraf dist",
    "dev": "rollup -c -w",
    "prepublishOnly": "npm run build",
    "postinstall": "npm run build || echo 'Build falló, usando archivos pre-compilados'",
    "prepare": "npm run build || echo 'Build falló durante prepare'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rmzmiguel/MigButton.git"
  },
  "peerDependencies": {
    "react": "*",
    "react-dom": "*"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "keywords": [
    "react",
    "button",
    "component",
    "ui",
    "typescript",
    "javascript",
    "github-package"
  ],
  "author": "Miguel Ramírez",
  "license": "MIT",
  "homepage": "https://github.com/rmzmiguel/MigButton#readme",
  "bugs": {
    "url": "https://github.com/rmzmiguel/MigButton/issues"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/node": "^24.1.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.9.2",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=14"
  }
}